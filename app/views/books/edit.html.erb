<h1>Editing Book</h1>
<div class="errors">
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
<% end %>
</ul>
</div>

<%= form_with model:@book, local: true do |f| %>
  <div class="field">
  <h4>Title</h4>
  <%= f.text_field :title %>
  </div>
  
  <div class="field"> 
  <h4>Body</h4>
  <%= f.text_area :body %>
  </div>
  
  <div class="field">
  <%= f.submit 'Update Book' %>
  </div>
  
<% end %>

<div><%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %></div>
